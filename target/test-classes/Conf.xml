<redis>
    <settings>
        <lazyload>false</lazyload>
    </settings>

    <typeAlias>
        <alias name="teacher" javaType="RedisORM.useTest.Teacher"/>
        <alias name="student" javaType="RedisORM.useTest.Student"/>
    </typeAlias>

    <datasource>
        <host>localhost</host>
        <port>6379</port>
        <pooled maxtotal="30" maxidle="10">true</pooled>
    </datasource>

    <scan>
        <class type="teacher"/>
        <class type="student"/>
    </scan>

</redis>



